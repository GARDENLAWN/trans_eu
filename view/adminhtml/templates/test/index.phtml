    <script>
        function saveToken() {
            var token = document.getElementById('manual_token_input').value;
            if (!token) {
                alert('Please paste a token first.');
                return;
            }

            var statusSpan = document.getElementById('save_status');
            statusSpan.style.color = 'blue';
            statusSpan.innerText = 'Saving...';

            new Ajax.Request('<?= $block->getUrl('gardenlawn_transeu/test/saveToken') ?>', {
                method: 'post',
                parameters: {
                    token: token,
                    form_key: FORM_KEY
                },
                onSuccess: function(transport) {
                    var response = transport.responseText.evalJSON();
                    if (response.success) {
                        statusSpan.style.color = 'green';
                        statusSpan.innerText = 'Saved! Reloading...';
                        setTimeout(function() {
                            location.reload();
                        }, 1000);
                    } else {
                        statusSpan.style.color = 'red';
                        statusSpan.innerText = 'Error: ' + response.message;
                    }
                },
                onFailure: function() {
                    statusSpan.style.color = 'red';
                    statusSpan.innerText = 'Connection error.';
                }
            });
        }
    </script>

